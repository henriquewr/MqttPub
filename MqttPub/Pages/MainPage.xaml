<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MqttPub.MainPage"
             xmlns:viewmodel="clr-namespace:MqttPub.ViewModels"
             x:DataType="viewmodel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                Text="List mqtt connection" 
                Command="{Binding ListMqttConnectionCommand}" 
                HorizontalOptions="Fill" />

            <Button
                Text="List mqtt action" 
                Command="{Binding ListMqttActionCommand}" 
                HorizontalOptions="Fill" />

            <Button
                Text="List app action" 
                Command="{Binding ListAppActionCommand}" 
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
